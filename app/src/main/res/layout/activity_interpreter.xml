<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walden.javadesignmode.activity.InterpreterActivity">

    <include layout="@layout/description" />

    <ImageView
        android:id="@+id/interpreter_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/description"
        android:src="@mipmap/interpreter_mode_img" />


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/interpreter_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/interpreter_img"
        android:hint="输入计算表达式，仅限加减,如：5+5-3" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/interpreter_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interpreter_et" />

    <Button
        android:id="@+id/interpreter_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="show"
        android:textAllCaps="false" />

</RelativeLayout>
